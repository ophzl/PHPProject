{% extends "index.html.twig" %}
{% block title %}{{ parent() }} - Mettre à jour une catégorie{% endblock %}
{% block body %}
    <div class="container-fluid mt-2">

        <div class="jumbotron"><h2 class="display-3">Mise à jour d'une catégorie</h2></div>

        <hr class="my-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="label" class="col-sm-2 col-form-label">Libellé </label>
                <div class="col-sm-10">
                    <input type="text" name="label" class="form-control form-control-lg" value="{{ category.label }}">
                </div>
            </div>


            <div class="form-group row">
                <label for="code_reference" class="col-sm-2 col-form-label">Code de référence</label>
                <div class="col-sm-10">
                    <input type="text" name="code_reference" class="form-control" value="{{ category.codeReference }}">
                </div>
            </div>


            <input type="hidden" name="crsf" value="{{ token }}">
            <input type="submit" class="btn btn-primary my-1">
        </form>
    </div>

{% endblock %}