{% extends "index.html.twig" %}
{% block title %} Liste des articles non-approuvés - {{ parent() }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Liste des articles non-approuvés</h1>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titre</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articleList %}
                {% if article.Valid == null %}
                    <tr>
                        <th scope="row">#{{ article.id }}</th>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.auteur }}</td>
                        <td>{{ article.DateAjout | date("d/m/Y") }}</td>
                        <td>
                            <div class="btn-group" role="group">

                                <a class="btn btn-danger" href="/Admin/DeleteArticle/{{ article.id }}"><i
                                            class="far fa-trash-alt"></i></a>


                            </div>
                            <a class="btn btn-success" href="/Admin/ApproveArticle/{{ article.id }}"><i
                                        class="fas fa-user-check"></i></a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}

            </tbody>
        </table>
    </div>


{% endblock %}